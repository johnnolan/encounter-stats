    "jest-junit": "^14.0.1",
    "jest-localstorage-mock": "^2.4.22",
    "prettier": "^2.7.1",
    "sass": "^1.54.9",
    "ts-jest": "^28.0.8",
    "ts-migrate": "^0.1.33",
    "typescript": "^4.8.2"
  },
  "jest-junit": {
    "outputDirectory": "./test-results/junit",
    "outputName": "results.xml"
  }
